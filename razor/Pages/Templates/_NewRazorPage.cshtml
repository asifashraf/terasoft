@page
@model YourModel

<h1>@Model.Title</h1>
<p>@Model.Message</p>

@functions {
    public class YourModel : PageModel
    {
        public string? Title { get; set; }
        public string? Message { get; set; }

        public void OnGet()
        {
            Title = "My Razor Page";
            Message = "Hello from the model class!";
        }
    }
}